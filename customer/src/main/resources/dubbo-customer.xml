<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签-->
    <dubbo:application name="customer"/>
    <!-- use multicast registry center to discover service -->
    <!-- 使用zookeeper做为注册中心 -->
    <dubbo:registry  protocol="zookeeper" address="zookeeper://127.0.0.1:2181"/>

    <!--生成一个远程服务的调用代理-->
    <!--点对点方式-->
    <dubbo:reference id="demoService" check="false" interface="com.unifs.api.service.DemoService"/>
    <dubbo:reference id="userService" check="false" interface="com.unifs.api.service.UserService"/>
</beans>